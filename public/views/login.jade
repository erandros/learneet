extends layout

append styles
  link(rel='stylesheet', href='/stylesheets/form.css')
  link(rel='stylesheet', href='/stylesheets/login.css')

prepend scripts
  script.
    guiName = 'LogInGui'

block main
  .rectangular-frame
    form.form-inner(action="/api/auth" method="POST")
      input.form-input#username(type="text" placeholder="username" name="username")
      input.form-input#password(type="password" placeholder="password" name="password")
      .buttons
        input#login(type="submit" value="Log in")
        button#cancel Cancel