extends layout

prepend scripts
  script.
    guiName = 'EditArticleGui'

append styles
  link(rel='stylesheet', href='/stylesheets/login.css')

block content
  #warnings
  div
    label Username
    input#username(type="text")
  div
    label Password
    input#password(type="password")
  input#login(type="button", value="Log in")
  input#cancel(type="button", value="Cancel")